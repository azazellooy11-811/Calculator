<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/math_operation"
        android:layout_height="80sp"
        android:textColor="@color/grey"
        android:gravity="end"
        android:ellipsize="start"
        android:layout_width="match_parent"
        android:textSize="48sp"
        android:singleLine="true"/>


    <TextView
        android:id="@+id/result_text"
        android:layout_height="100sp"
        android:textColor="@color/grey"
        android:gravity="end"
        android:ellipsize="start"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/NumberButton"
                android:text="AC"
                android:id="@+id/clear_btn"/>

            <TextView
                style="@style/NumberButton"
                android:text="("
                android:id="@+id/bracket_open_btn"/>

            <TextView
                style="@style/NumberButton"
                android:text=")"
                android:id="@+id/bracket_close_btn"/>

            <TextView
                style="@style/NumberButton"
                android:text="/"
                android:id="@+id/disivion_btn" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:text="7"
                android:id="@+id/btn_7"/>

            <TextView
                style="@style/ActionButton"
                android:text="8"
                android:id="@+id/btn_8"/>

            <TextView
                style="@style/ActionButton"
                android:text="9"
                android:id="@+id/btn_9"/>

            <TextView
                style="@style/NumberButton"
                android:text="*"
                android:id="@+id/mult_btn"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:text="4"
                android:id="@+id/btn_4"/>

            <TextView
                style="@style/ActionButton"
                android:text="5"
                android:id="@+id/btn_5"/>

            <TextView
                style="@style/ActionButton"
                android:text="6"
                android:id="@+id/btn_6"/>

            <TextView
                style="@style/NumberButton"
                android:text="+"
                android:id="@+id/plus_btn"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:text="1"
                android:id="@+id/btn_1"/>

            <TextView
                style="@style/ActionButton"
                android:text="2"
                android:id="@+id/btn_2"/>

            <TextView
                style="@style/ActionButton"
                android:text="3"
                android:id="@+id/btn_3"/>

            <TextView
                style="@style/NumberButton"
                android:text="-"
                android:id="@+id/minus_btn"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:text="."
                android:id="@+id/dot_btn"/>

            <TextView
                style="@style/ActionButton"
                android:text="0"
                android:id="@+id/btn_0"/>

            <TextView
                style="@style/ActionButton"
                android:text="Back"
                android:id="@+id/back_btn"/>

            <TextView
                style="@style/NumberButton"
                android:text="="
                android:id="@+id/equal_btn"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/changeTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="change theme" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>